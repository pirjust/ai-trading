{
  "bt_panel": {
    "version": "7.9.0",
    "supported_os": ["CentOS 7+", "Ubuntu 18.04+", "Debian 9+"],
    "requirements": {
      "memory": "2GB+",
      "disk": "20GB+",
      "cpu": "2 cores+"
    }
  },
  "deployment": {
    "project_name": "ai-trading",
    "project_dir": "/www/wwwroot/ai-trading",
    "web_port": 8000,
    "ssl_enabled": true,
    "backup_enabled": true,
    "monitoring_enabled": true
  },
  "services": {
    "web_app": {
      "port": 8000,
      "protocol": "http",
      "health_check": "/health",
      "restart_policy": "always"
    },
    "postgres": {
      "port": 5432,
      "protocol": "tcp",
      "database": "ai_trading",
      "username": "ai_trader",
      "restart_policy": "always"
    },
    "redis": {
      "port": 6379,
      "protocol": "tcp",
      "restart_policy": "always"
    },
    "influxdb": {
      "port": 8086,
      "protocol": "tcp",
      "restart_policy": "always"
    },
    "prometheus": {
      "port": 9090,
      "protocol": "http",
      "restart_policy": "always"
    },
    "grafana": {
      "port": 3000,
      "protocol": "http",
      "restart_policy": "always"
    }
  },
  "nginx": {
    "config_file": "/www/server/panel/vhost/nginx/ai-trading.conf",
    "ssl_cert_dir": "/www/server/panel/vhost/ssl",
    "proxy_pass": "http://127.0.0.1:8000"
  },
  "monitoring": {
    "enabled": true,
    "interval": 60,
    "alert_channels": ["webhook", "email"],
    "thresholds": {
      "cpu_usage": 80,
      "memory_usage": 85,
      "disk_usage": 90,
      "response_time": 5.0
    }
  },
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention_days": 7,
    "backup_dir": "/www/backup/ai-trading",
    "include": ["database", "configs", "logs"]
  },
  "security": {
    "firewall_enabled": true,
    "ssl_enforced": true,
    "rate_limiting": true,
    "access_logs": true,
    "fail2ban_enabled": true
  },
  "maintenance": {
    "auto_update": false,
    "log_rotation": true,
    "cleanup_schedule": "0 3 * * 0"
  }
}